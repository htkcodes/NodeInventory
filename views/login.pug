extends layout

block content

 .row
  h1  LOGIN
  h6  Enter your credentials down below
  br
 
  p.flash-error.animated.flash
    | #{error}
    i.material-icons.left.hide error
  p.flash-success
    | #{success_msg}
  form(method="post" action="/users/login" ).col.s12
    .row
      .input-field.col.s8.l4.offset-s2.offset-l4
        i.material-icons.prefix account_circle
        input(placeholder='Username', type='text' name="username" id="icon_prefix" class="validate" required="true")
        label(for='icon_prefix' data-error="You actually need to type in a name ðŸ˜’")
      .input-field.col.s8.offset-s2.l4.offset-l4
        i.material-icons.prefix lock
        input(type='password' placeholder="Password" name="password" id="icon_prefix" class="validate" required="true")
        label(for='password' data-error="You actually need to type in a password ðŸ˜’")
    button.btn.btn-primary.move.btn-large(type='submit') Login
      i.material-icons.right lock_open
      
                                        