              li
                a(href="/users/register")
                  i.material-icons.white-text person_add
                  | Register
            if user
                if  user.admin==false
                  li
                    a(href="/inventory").userlink  
                      i.material-icons.white-text home
                      |  Home
                  li
                    a(href="/users/consumer").userlink 
                      i.material-icons.white-text shopping_basket
                      |  View Products
                  li 
                    a(href="/users/changepassword/"+user._id).userlink 
                      i.material-icons.white-text lock_outline
                      | Change Password
                  li
                    a(href="/users/cart").userlink 
                      i.material-icons.white-text shopping_cart
                      | My Cart
                  li 
                    a(href="/users/order/"+user._id).userlink 
                      i.material-icons.white-text done_all
                      | Completed Orders
                  li
                    a(href="/users/logout").userlink 
                      i.material-icons.white-text input
                      | Logout
                else
                    li
                      a(href="/inventory").userlink  
                        i.material-icons.white-text home
                        |  Home
                    li
                      a(href="/inventory/items").userlink 
                        i.material-icons.white-text list
                        | Products
                    li
                      a(href="/users/profit").userlink 
                        i.material-icons.white-text insert_chart
                        | Profits and Expenses
                    li
                      a(href="/inventory/item/create").userlink 
                        i.material-icons.white-text add_shopping_cart
                        | Add Product
                    li 
                      a(href="/users/order/").userlink 
                        i.material-icons.white-text view_list
                        | Orders
                    li
                      a(href="/users/consumer").userlink 
                        i.material-icons.white-text shopping_basket
                        |  View Products
                    li 
                      a(href="/users/changepassword/"+user._id).userlink 
                        i.material-icons.white-text lock_outline
                        | Change Password
                    li
                      a(href="/users/cart").userlink 
                        i.material-icons.white-text shopping_cart
                        | My Cart
                    li 
                      a(href="/users/order/"+user._id).userlink 
                        i.material-icons.white-text done_all
                        | Completed Orders
                    li
                      a(href="/users/logout").userlink 
                        i.material-icons.white-text input
                        | Logout 
