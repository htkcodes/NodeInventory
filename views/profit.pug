extends layout

block content
  - var expense=30000;
  h1 #{title}
  h2 #{data.item_total[0].sum}
  div.container
    .row
    .col.s12
      ul.tabs
        li.tab.col.s4
          a.active(href='#test1') Weekly Sales Total
        li.tab.col.s4
          a(href='#test2') Profit/Loss
        li.tab.col.s4
          a(href="#test3") Chart
        
    #test1.col.s12
     ul.collection
      each foo,i in wklySales
        li.collection-item.white.list-data
          div.week.highlight-color
            span.weekdate
              | #{foo.date}

            div.secondary-content(href='#!').highlight-color
              | #{foo.amount}

              
          
    #test2.col.s12
      ul.collection
        each profit,i in wklySales
          li.collection-item.white.list-data
            div.gross.highlight-color
              span.date #{profit.date} 
              span.profit #{profit.gross_profit}
              span(data-badge-caption="LOSS").light-red.badge
    #test3.col.s12
     
    

    
  

    
        
