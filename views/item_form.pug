extends layout

block content
  h1=title
  .row
    form(method='POST' action='').col.s12
      .row
        .input-field.col.s8.l4.offset-s2.offset-l4
          i.material-icons.prefix local_offer
          input(type='text', placeholder='Item Name' id="icon_prefx" class="validate" name='name' required='true',value=(undefined===item ? '' : item.name))
          label(for='icon_prefix' data-error="You actually need to type in an item ðŸ˜’")
        .input-field.col.s8.l4.offset-s2.offset-l4
          i.material-icons.prefix local_grocery_store
          input(type='text', placeholder='Quantity' id="icon_prefx" class="validate" name='quantity' required='true',value=(undefined===item ? '' : item.quantity))
          label(for='icon_prefix' data-error="You actually need to type in the amount of items ðŸ˜’")
      .row
        .input-field.col.s8.l4.offset-s2.offset-l4
          i.material-icons.prefix attach_money
          input(type='text', placeholder='Price' id="icon_prefx" class="validate" name='price' required='true',value=(undefined===item ? '' : item.price))
          label(for='icon_prefix' data-error="You actually need to type in the price ðŸ˜’")
      button.btn.btn-primary.btn-large.move(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg